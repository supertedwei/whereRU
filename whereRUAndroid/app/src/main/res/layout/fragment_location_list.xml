<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.supergigi.whereru.location_list.LocationListFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:name="com.supergigi.passwordconciergeandroid.fragment.MainListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="LinearLayoutManager"
        tools:context="com.supergigi.passwordconciergeandroid.MainActivity"
        tools:listitem="@layout/fragment_location_list_content"/>

    <ProgressBar
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTintMode="src_atop"
        android:layout_gravity="center" />

</FrameLayout>
